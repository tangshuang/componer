{
	"entry": {
		"script": "src/script/{{componout-name}}.js",
		"style": "src/style/{{componout-name}}.scss"
	},
	"output": {
		"script": "dist/js",
		"style": "dist/css"
	},
	"webpack": {
		"_minify": true,
		"output": {
			"filename": "{{componout-name}}.js",
			"libraryTarget": "umd",
			"library": "{{componoutName}}",
			"sourceMapFilename": "{{componout-name}}.js.map",
			"publicPath": ""
		},
		"devtool": "source-map",
		"externals": {},
		"resolve": {
			"alias": {}
		}
	},
	"sass": {
		"_minify": true,
		"output": {
			"filename": "{{componout-name}}.css",
			"sourcemap": true,
			"publicPath": ""
		}
	},
	"preview": {
		"index": "preview/index.html",
		"script": "preview/{{componout-name}}.js",
		"style": "preview/{{componout-name}}.scss",
		"server": "preview/server.js",
		"tmpdir": ".tmp",
		"listen": [
			".tmp/index.html",
			".tmp/{{componout-name}}.js",
			".tmp/{{componout-name}}.css"
		]
	},
	"test": {
		"entry": "test/specs/{{componout-name}}.js",
		"reporters": "test/reporters",
		"debug": false,
		"browsers": ["PhantomJS"]
	}
}
