{
	"entry": {
		"script": "src/script/{{componout-name}}.js",
		"assets": "assets",
		"preview": "preview",
		"test": "test/specs"
	},
	"output": {
		"script": "dist",
		"assets": "assets",
		"reporters": "test/reporters"
	},
	"webpack": {
		"_minify": true,
		"output": {
			"filename": "{{componout-name}}.js",
			"libraryTarget": "umd",
			"library": "{{componoutName}}",
			"sourceMapFilename": "{{componout-name}}.js.map"
		},
		"externals": {},
		"resolve": {
			"alias": {}
		},
		"devtool": "source-map"
	},
	"sass": {
		"_minify": true,
		"output": {
			"filename": "{{componout-name}}.css",
			"sourcemap": "file"
		}
	},
	"karma": {
		"singleRun": true,
		"browsers": ["PhantomJS"]
	}
}