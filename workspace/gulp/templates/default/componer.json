{
	"entry": {
		"script": "src/script/{{component-name}}.js",
		"style": "src/style/{{component-name}}.scss",
		"index": "src/index.html",
		"preview": "dist/index.html",
		"test": "test/specs"
	},
	"output": {
		"script": "dist/js",
		"style": "dist/css",
		"index": "dist",
		"reporters": "test/reporters"
	},
	"webpack": {
		"_minify": true,
		"output": {
			"libraryTarget": "umd",
			"filename": "{{component-name}}.js",
			"library": "{{componentName}}",
			"sourceMapFilename": "{{component-name}}.js.map"
		},
		"externals": {},
		"resolve": {
			"alias": {}
		},
		"devtool": "source-map"
	},
	"sass": {
		"_minify": true,
		"output": {
			"filename": "{{component-name}}.css",
			"sourcemap": true
		}
	},
	"karma": {
		"singleRun": true,
		"browsers": ["PhantomJS"]
	}
}