{
	"name": "{{componout-name}}",
	"version": "0.0.1",
  	"type": "app",
	"build": {
		"env": "production",
		"entry": "src/index.js",
		"html": "src/index.html",
		"output": "dist"
	},
	"preview": {
		"dir": ".preview_tmp",
		"script": {
			"from": "src/script/index.js",
			"options": {
				"minify": false,
				"sourcemap": true,
        		"vendors": true
			},
			"settings": {}
		},
		"style": {
			"from": "src/style/index.scss",
			"options": {
				"minify": false,
				"sourcemap": true,
        		"vendors": true
			},
			"settings": {}
		},
		"index": {
			"from": "preview/index.html"
		},
		"watch": [
			"preview/index.html",
      "src/**/*"
		],
		"server": "preview/server.js"
	},
	"test": {
		"entry": {
			"from": "test/specs/index.js",
			"settings": {}
		},
		"exclude": [],
		"reporters": "test/reporters",
		"debug": false,
		"browsers": ["PhantomJS"]
	}
}
