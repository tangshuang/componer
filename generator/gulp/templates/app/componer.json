{
	"name": "{{componout-name}}",
	"version": "0.0.1",
    "type": "app",
	"build": [
		{
			"from": "src/script/{{componout-name}}.js",
			"to": "dist/js/{{componout-name}}.js",
			"options": {
				"minify": true,
				"sourcemap": true,
                "vendors": true
			},
			"settings": {}
		},
		{
			"from": "src/style/{{componout-name}}.scss",
			"to": "dist/css/{{componout-name}}.css",
			"options": {
				"minify": true,
				"sourcemap": true,
				"vendors": true
			},
			"settings": {
                "sass": {},
    			"postcss": {},
    			"nextcss": {},
    			"assets": {}
            }
		}
	],
	"preview": {
		"dir": ".preview_tmp",
		"script": {
			"from": "src/script/{{componout-name}}.js",
			"options": {
				"minify": false,
				"sourcemap": true,
                "vendors": true
			},
			"settings": {}
		},
		"style": {
			"from": "src/style/{{componout-name}}.scss",
			"options": {
				"minify": false,
				"sourcemap": true,
                "vendors": true
			},
			"settings": {}
		},
		"index": {
			"from": "preview/index.html"
		},
		"watch": [
			"preview/index.html",
            "src/**/*"
		],
		"server": "preview/server.js"
	},
	"test": {
		"entry": {
			"from": "test/specs/{{componout-name}}.js",
			"settings": {}
		},
		"externals": [],
		"reporters": "test/reporters",
		"debug": false,
		"browsers": ["PhantomJS"]
	}
}
